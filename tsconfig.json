{
    "compilerOptions": {
        "allowJs": false,
        "target": "ES2015",
        "module": "CommonJS",
        "strict": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "./src",
        "outDir": "./cjs",
        "noEmit": false,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es2015", "es2018", "esnext"],
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": ["src"]
}
